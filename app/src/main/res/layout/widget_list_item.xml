<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_article_list_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_list_item_height"
    android:layout_margin="@dimen/widget_list_item_margin"
    android:background="@color/colorPrimaryText">

    <ImageView
        android:contentDescription="@string/widget_article_list_image_content_description"
        android:id="@+id/widget_article_image"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/image_not_available"
        android:layout_margin="@dimen/widget_list_item_article_image_margin"/>

    <LinearLayout
        android:id="@+id/widget_article_text"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/widget_list_item_article_text_margin">

        <TextView
            android:id="@+id/widget_article_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:maxLines="3"
            android:textSize="@dimen/widget_list_item_article_title_text_size"
            android:textColor="@color/colorSecondaryText"/>

        <TextView
            android:id="@+id/widget_article_source"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:textSize="@dimen/widget_list_item_article_source_text_size"
            android:gravity="end"
            android:textColor="@color/colorSecondaryText"/>

    </LinearLayout>

</LinearLayout>